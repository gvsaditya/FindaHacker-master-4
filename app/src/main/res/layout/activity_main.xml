<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hackathons" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textColor="#ff000000"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"></LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LA Hacks"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal|left"
            android:textSize="32dp"
            android:layout_marginTop="15dp"
            android:background="#00ffffff"
            android:onClick="buttonOnClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bit Camp"
            android:id="@+id/button2"
            android:textSize="32dp"
            android:background="#00ffffff"
            android:onClick="buttonOnClick1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brick Hack"
            android:id="@+id/button3"
            android:textSize="32dp"
            android:background="#00ffffff"
            android:onClick="buttonOnClick2"
            android:nestedScrollingEnabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hack RU"
            android:id="@+id/button4"
            android:textSize="32dp"
            android:background="#00ffffff"
            android:onClick="buttonOnClick3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carl Hacks"
            android:id="@+id/button5"
            android:textSize="32dp"
            android:background="#00ffffff"
            android:onClick="buttonOnClick4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redbird Hacks"
            android:id="@+id/button6"
            android:textSize="32dp"
            android:background="#00ffffff"
            android:onClick="buttonOnClick5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project 34"
            android:id="@+id/button7"
            android:textSize="32dp"
            android:background="#00ffffff"
            android:onClick="buttonOnClick6" />

    </LinearLayout>

</RelativeLayout>
